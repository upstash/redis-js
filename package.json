{
  "name": "upstash-redis",
  "version": "0.0.3",
  "repository": "https://github.com/upstash/upstash-redis.git",
  "author": "Adem ilter <ademilter@gmail.com>",
  "license": "MIT",
  "main": "dist/main/index.js",
  "module": "dist/module/index.js",
  "types": "dist/main/index.d.ts",
  "jsdelivr": "dist/umd/upstash-redis.js",
  "unpkg": "dist/umd/upstash-redis.js",
  "scripts": {
    "clean": "rimraf dist",
    "format": "prettier --write \"{src,test}/**/*.ts\"",
    "build": "run-s clean format build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "build:umd": "webpack",
    "test": "jest --runInBand && npm run size",
    "size": "size-limit"
  },
  "dependencies": {
    "isomorphic-unfetch": "^3.1.0",
    "url-regex": "^5.0.0"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^5.0.3",
    "@types/jest": "^26.0.24",
    "@types/node-fetch": "^2.5.12",
    "dotenv": "^10.0.0",
    "jest": "^27.0.6",
    "nanoid": "^3.1.25",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "size-limit": "^5.0.3",
    "ts-jest": "^27.0.4",
    "ts-loader": "^9.2.5",
    "typescript": "^4.3.5",
    "webpack": "^5.49.0",
    "webpack-cli": "^4.7.2"
  },
  "size-limit": [
    {
      "path": "dist/main/index.js",
      "limit": "5 KB"
    },
    {
      "path": "dist/module/index.js",
      "limit": "5 KB"
    },
    {
      "path": "dist/umd/upstash-redis.js",
      "limit": "5 KB"
    }
  ],
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "engines": {
    "node": ">=10"
  }
}
